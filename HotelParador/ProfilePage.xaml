<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HotelParador.ProfilePage"
    Title="Perfil">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">

            <!-- Avatar -->
            <Frame CornerRadius="60" HeightRequest="120" WidthRequest="120" HorizontalOptions="Center" HasShadow="True">
                <Image Source="pfp.jpg" WidthRequest="120" HeightRequest="120"/>
            </Frame>

            <!-- Nombre -->
            <Label x:Name="LblNombre" FontSize="22" FontAttributes="Bold" HorizontalTextAlignment="Center" />

            <!-- Correo -->
            <Label x:Name="LblEmail" FontSize="14" HorizontalTextAlignment="Center" />

            <!-- Separador -->
            <BoxView HeightRequest="1" BackgroundColor="#E6E6E6" />

    
            <!-- Reservas -->
            <Label Text="Reservas recientes" FontAttributes="Bold" />
            <CollectionView x:Name="CvReservas" ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" CornerRadius="8" HasShadow="True" BackgroundColor="#F5F5F5">
                            <VerticalStackLayout>
                                <Label Text="{Binding room_name}" FontAttributes="Bold"/>
                                <Label Text="{Binding checkin, StringFormat='Check-in: {0}'}"/>
                                <Label Text="{Binding checkout, StringFormat='Check-out: {0}'}"/>
                                <Label Text="{Binding total, StringFormat='Total: {0}'}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Botones -->
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button Text="Editar perfil" x:Name="BtnEditar" BackgroundColor="#D1A011" TextColor="White"/>
                <Button Text="Cerrar sesiÃ³n" x:Name="BtnLogout" BackgroundColor="Transparent" TextColor="#333"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
