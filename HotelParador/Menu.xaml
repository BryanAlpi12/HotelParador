<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelParador.Menu"
             Title="Menu">


    <!-- Toolbar con las opciones del menú -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Introducción" 
                     IconImageSource="info_icon.png"
                     Order="Secondary" 
                     Priority="0"
                     Clicked="OnIntroduccionClicked"/>

        <ToolbarItem Text="Historia" 
                     IconImageSource="history_icon.png"
                     Order="Secondary" 
                     Priority="1"
                     Clicked="OnHistoriaClicked"/>

        <ToolbarItem Text="Ayuda" 
                     IconImageSource="help_icon.png"
                     Order="Secondary" 
                     Priority="2"
                     Clicked="OnAyudaClicked"/>

        <ToolbarItem Text="Cancelar Reservación" 
                     IconImageSource="cancel_icon.png"
                     Order="Secondary" 
                     Priority="3"
                     Clicked="OnCancelarReservaClicked"/>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="*,Auto">

        <!-- SCROLL GENERAL -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="20" Padding="10">

                <!-- Imagen destacada -->
                <Frame HasShadow="False" Padding="0" CornerRadius="15">
                    <Image Source="portada1.png" Aspect="AspectFill" HeightRequest="200"/>
                </Frame>

                <!-- Sección 1 -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="Perfect for you" FontSize="20" FontAttributes="Bold"/>
                    
                </Grid>

                <!-- Tarjetas horizontales -->
                <ScrollView Orientation="Horizontal">
                    <HorizontalStackLayout Spacing="15">

                        <!-- Garden Room - CON TAP GESTURE -->
                        <Frame WidthRequest="200" CornerRadius="15" HasShadow="True">
                            <VerticalStackLayout>
                                <Image Source="garden.jpg" HeightRequest="130" Aspect="AspectFill" />
                                <Label Text="Garden Room" FontAttributes="Bold" Margin="10,5,10,0"/>
                                <Label Text="$228 usd" TextColor="#888" Margin="10,0,0,10"/>

                                <!-- Gesture Recognizer para detectar tap -->
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnGardenRoomTapped"/>
                                </VerticalStackLayout.GestureRecognizers>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Garden Plus - CON TAP GESTURE -->
                        <Frame WidthRequest="200" CornerRadius="15" HasShadow="True">
                            <VerticalStackLayout>
                                <Image Source="gardenplus.png" HeightRequest="120" Aspect="AspectFill"/>
                                <Label Text="Garden Plus Room" FontAttributes="Bold" Margin="10,5,10,0"/>
                                <Label Text="$257 usd" TextColor="#888" Margin="10,0,0,10"/>

                                <!-- Gesture Recognizer para detectar tap -->
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnGardenPlusRoomTapped"/>
                                </VerticalStackLayout.GestureRecognizers>
                            </VerticalStackLayout>
                        </Frame>

                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Sección 2 -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="For this summer" FontSize="20" FontAttributes="Bold"/>
                    
                </Grid>

                <!-- Tarjetas horizontales sección 2 -->
                <ScrollView Orientation="Horizontal">
                    <HorizontalStackLayout Spacing="15">

                        <!-- Tropical - CON TAP GESTURE -->
                        <Frame WidthRequest="200" CornerRadius="15" HasShadow="True">
                            <VerticalStackLayout>
                                <Image Source="tropical.png" HeightRequest="110" Aspect="AspectFill"/>
                                <Label Text="Tropical Room" FontAttributes="Bold" Margin="10,5,10,0"/>
                                <Label Text="$245 usd" TextColor="#888" Margin="10,0,0,10"/>

                                <!-- Gesture Recognizer para detectar tap -->
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnTropicalRoomTapped"/>
                                </VerticalStackLayout.GestureRecognizers>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Premium Plus - CON TAP GESTURE -->
                        <Frame WidthRequest="200" CornerRadius="15" HasShadow="True">
                            <VerticalStackLayout>
                                <Image Source="premiumplus.png" HeightRequest="110" Aspect="AspectFill"/>
                                <Label Text="Premium Plus Room" FontAttributes="Bold" Margin="10,5,10,0"/>
                                <Label Text="$310 usd" TextColor="#888" Margin="10,0,0,10"/>

                                <!-- Gesture Recognizer para detectar tap -->
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnPremiumPlusRoomTapped"/>
                                </VerticalStackLayout.GestureRecognizers>
                            </VerticalStackLayout>
                        </Frame>

                    </HorizontalStackLayout>
                </ScrollView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- BOTON NAVIGATION -->
        <Grid Grid.Row="1"
              BackgroundColor="White"
              Padding="10"
              Margin="0">

            <Grid ColumnDefinitions="*,*,*,*">

                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                    <Image Source="explore_icon.png" WidthRequest="24"/>
                    <Label Text="Explore" FontSize="12" />
                </VerticalStackLayout>

                <!-- LOCATION - EVENTO AGREGADO -->
                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Image Source="location.ico" WidthRequest="24"/>
                    <Label Text="Location" FontSize="12" />

                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLocationTapped"/>
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <!-- BOOKING -->
                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                    <Image Source="booking.ico" WidthRequest="24"/>
                    <Label Text="Booking" FontSize="12" />

                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBookingTapped"/>
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <!-- PROFILE -->
                <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center">
                    <Image Source="profile.ico" WidthRequest="24">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="GoToProfile"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Text="Profile" FontSize="12" />
                </VerticalStackLayout>

            </Grid>
        </Grid>

    </Grid>
</ContentPage>
