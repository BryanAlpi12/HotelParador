<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelParador.Registro"
             Title="Registro">
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="piscina.jpg" WidthRequest="600" HeightRequest="270" Margin="0,0,0,10"/>
            <StackLayout Grid.Row="1" Padding="10,20">
                <Label FontSize="Title" FontAttributes="Bold" Text="Hola!" TextColor="#D1A011" HorizontalTextAlignment="Center" />
                <Entry Placeholder="Nombre" x:Name="nombre"/>
                <Entry Placeholder="Correo electrónico"  x:Name="usr"/>
                <Entry Placeholder="Contraseña"  IsPassword="True" x:Name="pwd"/>
                <Button Text="Registrarse" BackgroundColor="#D1A011" TextColor="White" x:Name="BtnRegistrarse"/>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>