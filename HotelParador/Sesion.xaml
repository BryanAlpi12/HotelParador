    <ScrollView>
        <Grid>
            <!--  Imagen de fondo  -->
            <Image
                x:Name="BackgroundImage"
                Aspect="AspectFill"
                Source="manuel.jpg" />

            <!--  Cuadro que rodea formulario  -->
            <Border
                Margin="30,10"
                BackgroundColor="#CCFFFFFF"
                HorizontalOptions="Center"
                Stroke="White"
                StrokeThickness="1"
                VerticalOptions="Center"
                WidthRequest="380">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25" />
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow
                        Brush="Black"
                        Opacity="0.3"
                        Radius="20"
                        Offset="0,10" />
                </Border.Shadow>

                <VerticalStackLayout Padding="40" Spacing="15">

                    <!--  Logo  -->
                    <Image
                        Margin="0,-40,0,0"
                        HeightRequest="200"
                        Source="https://hotelparador.com/wp-content/uploads/2022/07/Parador-Nature-Resort-Spa-300x151.png"
                        WidthRequest="300" />

                    <!--  Entry Correo con bordes redondeados  -->
                    <Border
                        Padding="15,0"
                        BackgroundColor="White"
                        HeightRequest="50"
                        Stroke="#E0E0E0"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25" />
                        </Border.StrokeShape>

                        <Entry
                            x:Name="usr_email"
                            BackgroundColor="Transparent"
                            Placeholder="Correo electrónico"
                            PlaceholderColor="#19437b"
                            VerticalOptions="Center" />
                    </Border>

                    <!--  Entry Contraseña con bordes redondeados  -->
                    <Border
                        Padding="15,0"
                        BackgroundColor="White"
                        HeightRequest="50"
                        Stroke="#E0E0E0"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25" />
                        </Border.StrokeShape>

                        <Entry
                            x:Name="pwd"
                            BackgroundColor="Transparent"
                            IsPassword="True"
                            Placeholder="Contraseña"
                            PlaceholderColor="#19437b"
                            VerticalOptions="Center" />
                    </Border>

                    <!--  Botón Iniciar Sesión  -->
                    <Button
                        x:Name="BtnIr"
                        BackgroundColor="#fec10d"
                        CornerRadius="25"
                        FontAttributes="Bold"
                        FontSize="17"
                        HeightRequest="50"
                        Text="Iniciar Sesión"
                        TextColor="#19437b"
                        WidthRequest="300" />

                    <Grid Margin="0,10,0,0" WidthRequest="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="0"
                            FontSize="12"
                            Text="Olvidó la Contraseña"
                            TextColor="#19437b"
                            TextDecorations="Underline"
                            VerticalOptions="Center" />

                        <!--  Registrarse como link  -->
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="Registrarse"
                            TextColor="#19437b"
                            TextDecorations="Underline"
                            VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnRegistrarseClicked" />
                            </Label.GestureRecognizers>
                        </Label>

                    </Grid>

                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>

</ContentPage>