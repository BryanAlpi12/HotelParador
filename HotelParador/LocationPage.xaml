<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
    x:Class="HotelParador.LocationPage"
    Title="Ubicaci贸n">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Grid Grid.Row="0" BackgroundColor="#6200EA" Padding="20,50,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ImageButton Source="back_arrow.png"
                        WidthRequest="24"
                        HeightRequest="24"
                        BackgroundColor="Transparent"
                        Clicked="OnBackClicked"
                        VerticalOptions="Center"/>

            <Label Text="Ubicaci贸n del Hotel"
                   Grid.Column="1"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Grid>

        <!-- Mapa -->
        <maps:Map x:Name="Mapa"
                  Grid.Row="1"
                  MapType="Street"
                  IsShowingUser="True" />

        <!-- Botones de navegaci贸n -->
        <Grid Grid.Row="2" 
              BackgroundColor="White" 
              Padding="20,15"
              RowSpacing="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Informaci贸n del hotel -->
            <VerticalStackLayout Grid.Row="0" Spacing="5">
                <Label Text="Hotel Parador"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#333"/>
                <Label Text="Manuel Antonio Norte, Quepos, Costa Rica"
                       FontSize="14"
                       TextColor="#666"/>
                <Label Text=" 9.3970, -84.1183"
                       FontSize="12"
                       TextColor="#999"/>
            </VerticalStackLayout>

            <BoxView Grid.Row="1" 
                     HeightRequest="1" 
                     BackgroundColor="#E0E0E0" 
                     Margin="0,10"/>

            <!-- Botones -->
            <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10">

                <!-- Bot贸n Google Maps -->
                <Button Grid.Column="0"
                        Text="Abrir en Google Maps"
                        BackgroundColor="#4285F4"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="14"
                        Clicked="OnGoogleMapsClicked">
                    <Button.ImageSource>
                        <FontImageSource 
                            Glyph=""
                            FontFamily="Arial"
                            Size="20"
                            Color="White"/>
                    </Button.ImageSource>
                </Button>

                <!-- Bot贸n Waze -->
                <Button Grid.Column="1"
                        Text="Abrir en Waze"
                        BackgroundColor="#33CCFF"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="14"
                        Clicked="OnWazeClicked">
                    <Button.ImageSource>
                        <FontImageSource 
                            Glyph=""
                            FontFamily="Arial"
                            Size="20"
                            Color="White"/>
                    </Button.ImageSource>
                </Button>
            </Grid>
        </Grid>

    </Grid>

</ContentPage>