<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HotelParador.BookingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F5F5F5"
    NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">

        <!--  Header  -->
        <Grid Padding="20,50,20,20" BackgroundColor="#6200EA">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ImageButton
                BackgroundColor="Transparent"
                Clicked="OnBackClicked"
                HeightRequest="24"
                Source="back_arrow.png"
                VerticalOptions="Center"
                WidthRequest="24" />

            <Label
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Mis Reservaciones"
                TextColor="White"
                VerticalOptions="Center" />

            <!--  Bot贸n Nueva Reservaci贸n  -->
            <Button
                Grid.Column="2"
                Padding="0"
                BackgroundColor="White"
                Clicked="OnNewBookingClicked"
                CornerRadius="20"
                FontAttributes="Bold"
                FontSize="24"
                HeightRequest="40"
                Text="+"
                TextColor="#6200EA"
                VerticalOptions="Center"
                WidthRequest="40" />
        </Grid>

        <!--  Loading Indicator  -->
        <ActivityIndicator
            x:Name="LoadingIndicator"
            Grid.Row="1"
            HorizontalOptions="Center"
            IsRunning="True"
            VerticalOptions="Center"
            Color="#6200EA" />

        <!--  Lista de Reservaciones  -->
        <ScrollView
            x:Name="ReservationsScrollView"
            Grid.Row="1"
            IsVisible="False">
            <VerticalStackLayout
                x:Name="ReservationsContainer"
                Padding="20"
                Spacing="20">
                <!--  Las reservaciones se cargar谩n aqu铆 din谩micamente  -->
            </VerticalStackLayout>
        </ScrollView>

        <!--  Estado Vac铆o  -->
        <VerticalStackLayout
            x:Name="EmptyState"
            Grid.Row="1"
            Padding="40"
            HorizontalOptions="Center"
            IsVisible="False"
            Spacing="20"
            VerticalOptions="Center">

            <Label
                FontSize="80"
                HorizontalOptions="Center"
                Opacity="0.3"
                Text="" />

            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalTextAlignment="Center"
                Text="No tienes reservaciones por el momento"
                TextColor="#666" />

            <Label
                Margin="0,0,0,20"
                FontSize="14"
                HorizontalTextAlignment="Center"
                Text="Explora nuestras habitaciones y haz tu primera reservaci贸n"
                TextColor="#999" />

            <Button
                Padding="30,15"
                BackgroundColor="#6200EA"
                Clicked="OnNewBookingClicked"
                CornerRadius="25"
                FontAttributes="Bold"
                FontSize="16"
                Text="Hacer una reservaci贸n"
                TextColor="White" />
        </VerticalStackLayout>

    </Grid>

</ContentPage>